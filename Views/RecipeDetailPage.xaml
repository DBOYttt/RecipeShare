<ContentPage 
    x:Class="RecipeShare.RecipeDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:RecipeShare.ViewModels"
    Title="Szczegóły przepisu">

  <ContentPage.BindingContext>
    <vm:RecipeDetailViewModel/>
  </ContentPage.BindingContext>

  <StackLayout Padding="20">
    <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" />
    <Label Text="{Binding Description}" FontSize="16" Margin="0,10,0,0"/>
  </StackLayout>
</ContentPage>
