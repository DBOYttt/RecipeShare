<ContentPage 
    x:Class="RecipeShare.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:RecipeShare.ViewModels"
    Title="Rejestracja">

  <ContentPage.BindingContext>
    <vm:RegisterViewModel />
  </ContentPage.BindingContext>

  <StackLayout Padding="20">
    <Entry Placeholder="Email" Text="{Binding Email}" />
    <Entry Placeholder="Nazwa użytkownika" Text="{Binding Username}" />
    <Entry Placeholder="Hasło" IsPassword="True" Text="{Binding Password}" />
    <Entry Placeholder="Powtórz hasło" IsPassword="True" Text="{Binding ConfirmPassword}" />
    <Button Text="Zarejestruj się" Command="{Binding RegisterCommand}" />
    <Label Text="{Binding Message}" TextColor="Red" />
  </StackLayout>
</ContentPage>
