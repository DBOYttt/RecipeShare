<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="RecipeShare.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecipeShare"
    Title="RecipeShare">
  <TabBar>
    <ShellContent Title="Strona główna" Icon="home.svg" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Dodaj przepis" Icon="add.svg" ContentTemplate="{DataTemplate local:AddRecipePage}" />
    <ShellContent Title="Ulubione" Icon="favorite.svg" ContentTemplate="{DataTemplate local:FavoritesPage}" />
    <ShellContent Title="Profil" Icon="profile.svg" ContentTemplate="{DataTemplate local:ProfilePage}" />
  </TabBar>
</Shell>
